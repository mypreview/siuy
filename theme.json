{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"appearanceTools": true,
	"settings": {
		"color": {
			"link": true,
			"defaultPalette": false,
			"palette": [
				{
					"color": "#595959",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#000",
					"name": "Text Dark",
					"slug": "text-dark"
				},
				{
					"color": "#878787",
					"name": "Text Light",
					"slug": "text-light"
				},
				{
					"color": "#d4d4d4",
					"name": "Text Lighter",
					"slug": "text-lighter"
				},
				{
					"color": "#ff5252",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#edeae7",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#a89b8e",
					"name": "Secondary Alt",
					"slug": "secondary-alt"
				},
				{
					"color": "#f9f9f9",
					"name": "Tile",
					"slug": "tile"
				},
				{
					"color": "#ebebeb",
					"name": "Separator",
					"slug": "separator"
				},
				{
					"color": "#979797",
					"name": "Border",
					"slug": "border"
				},
				{
					"color": "#fff",
					"name": "Light",
					"slug": "light"
				},
				{
					"color": "#1d1f24",
					"name": "Dark",
					"slug": "dark"
				}
			],
			"duotone": [
				{
					"colors": [ "#8f7123", "#ffffff" ],
					"name": "White and gold",
					"slug": "white-gold"
				}
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"custom": {
			"pagePadding": "24px"
		},
		"typography": {
			"lineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "Cardo",
					"name": "Cardo",
					"slug": "primary"
				},
				{
					"fontFamily": "Lato",
					"name": "Lato",
					"slug": "secondary"
				},
				{
					"fontFamily": "monospace",
					"name": "Monospace",
					"slug": "code"
				}
			],
			"fontSizes": [
				{
					"name": "Normal",
					"size": "clamp(15px, 3.5vw, 20px)",
					"slug": "normal"
				},
				{
					"name": "Small",
					"size": "14px",
					"slug": "small"
				},
				{
					"name": "Smallest",
					"size": "10px",
					"slug": "smallest"
				}
			]
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1400px"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true
		}
	},
	"styles": {
		"spacing": {
			"blockGap": "30px"
		},
		"color": {
			"background": "var(--wp--preset--color--light)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontSize": "clamp(15px, 3.5vw, 20px)",
			"fontWeight": "400",
			"fontFamily": "var(--wp--preset--font-family--primary)",
			"lineHeight": "1.8"
		},
		"elements": {
			"h1": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": "0"
					}
				},
				"typography": {
					"fontSize": "clamp(40px, 3.5vw, 64px)",
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": "700",
					"lineHeight": "1.33"
				}
			},
			"h2": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": "0"
					}
				},
				"typography": {
					"fontSize": "clamp(36px, 3.5vw, 48px)",
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": "400",
					"lineHeight": "1.33"
				}
			},
			"h3": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": "0"
					}
				},
				"typography": {
					"fontSize": "clamp(29px, 3.5vw, 36px)",
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": "400",
					"lineHeight": "1.33"
				}
			},
			"h4": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": "0"
					}
				},
				"typography": {
					"fontSize": "24px",
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": "400",
					"lineHeight": "1.33"
				}
			},
			"h5": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": "0"
					}
				},
				"typography": {
					"fontSize": "18px",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": "500",
					"lineHeight": "1.33"
				}
			},
			"h6": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": "0"
					}
				},
				"typography": {
					"fontSize": "14px",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": "500",
					"lineHeight": "1.33"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)"
				}
			},
			"core/archives": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text)"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/button": {
				"border": {
					"width": 0
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--light)"
				},
				"spacing": {
					"padding": "10px 30px"
				},
				"typography": {
					"fontSize": "12px",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": "700",
					"textTransform": "uppercase"
				}
			},
			"core/calendar": {
				"color": {
					"background": "transparent",
					"text": "var(--wp--preset--color--text)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text)"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/categories": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text)"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "30px",
					"fontWeight": "700"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "14px",
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				}
			},
			"core/navigation-submenu": {
				"color": {
					"background": "transparent",
					"text": "var(--wp--preset--color--text)"
				}
			},
			"core/quote": {
				"border": {
					"style": "solid",
					"width": "1px 0",
					"color": "var(--wp--preset--color--separator)"
				},
				"spacing": {
					"padding": {
						"top": "10px",
						"bottom": "10px",
						"left": "0",
						"right": "0"
					}
				},
				"typography": {
					"fontSize": "clamp(29px, 3.5vw, 36px)"
				},
				"color": {
					"text": "var(--wp--preset--color--dark)"
				}
			}
		}
	}
}
