{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"appearanceTools": true,
	"settings": {
		"color": {
			"link": true,
			"defaultPalette": false,
			"palette": [
				{
					"color": "#595959",
					"name": "Text",
					"slug": "text"
				},
				{
					"color": "#000",
					"name": "Text Dark",
					"slug": "text-dark"
				},
				{
					"color": "#878787",
					"name": "Text Light",
					"slug": "text-light"
				},
				{
					"color": "#d4d4d4",
					"name": "Text Lighter",
					"slug": "text-lighter"
				},
				{
					"color": "#ff5252",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#edeae7",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#a89b8e",
					"name": "Secondary Alt",
					"slug": "secondary-alt"
				},
				{
					"color": "#f9f9f9",
					"name": "Tile",
					"slug": "tile"
				},
				{
					"color": "#ebebeb",
					"name": "Separator",
					"slug": "separator"
				},
				{
					"color": "#979797",
					"name": "Border",
					"slug": "border"
				},
				{
					"color": "#fff",
					"name": "Light",
					"slug": "light"
				},
				{
					"color": "#1d1f24",
					"name": "Dark",
					"slug": "dark"
				}
			],
			"duotone": [
				{
					"colors": [ "#8f7123", "#ffffff" ],
					"name": "White and gold",
					"slug": "white-gold"
				}
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"typography": {
			"lineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "\"Cardo\", ui-sans-serif",
					"name": "Cardo",
					"slug": "primary",
					"fontFace": [
						{
							"fontFamily": "Cardo",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./fonts/Cardo-Regular.woff2" ]
						},
						{
							"fontFamily": "Cardo",
							"fontWeight": "400",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./fonts/Cardo-Italic.woff2" ]
						}
					]
				},
				{
					"fontFamily": "\"Lato\", ui-sans-serif",
					"name": "Lato",
					"slug": "secondary",
					"fontFace": [
						{
							"fontFamily": "Lato",
							"fontWeight": "400 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./fonts/Lato-Regular.woff2" ]
						},
						{
							"fontFamily": "Lato",
							"fontWeight": "400 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./fonts/Lato-Italic.woff2" ]
						}
					]
				},
				{
					"fontFamily": "ui-sans-serif, -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", sans-serif",
					"slug": "system-sans-serif",
					"name": "System Sans Serif"
				},
				{
					"fontFamily": "ui-monospace, Menlo, Consolas, Monaco, \"Liberation Mono\", \"Lucida Console\", monospace",
					"slug": "system-monospace",
					"name": "System Monospace"
				}
			],
			"fontSizes": [
				{
					"name": "Large",
					"size": "24px",
					"slug": "large"
				},
				{
					"name": "Medium",
					"size": "clamp(15px, 3.5vw, 20px)",
					"slug": "medium"
				},
				{
					"name": "Small",
					"size": "14px",
					"slug": "small"
				},
				{
					"name": "Smaller",
					"size": "12px",
					"slug": "smaller"
				},
				{
					"name": "Smallest",
					"size": "10px",
					"slug": "smallest"
				}
			]
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1400px"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true
		}
	},
	"styles": {
		"spacing": {
			"blockGap": "30px"
		},
		"color": {
			"background": "var(--wp--preset--color--light)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontSize": "clamp(15px, 3.5vw, 20px)",
			"fontWeight": 400,
			"fontFamily": "var(--wp--preset--font-family--primary)",
			"lineHeight": 1.8
		},
		"elements": {
			"h1": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": 0
					}
				},
				"typography": {
					"fontSize": "clamp(40px, 3.5vw, 64px)",
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": 700,
					"lineHeight": 1.33
				}
			},
			"h2": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": 0
					}
				},
				"typography": {
					"fontSize": "clamp(36px, 3.5vw, 48px)",
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": 400,
					"lineHeight": 1.33
				}
			},
			"h3": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": 0
					}
				},
				"typography": {
					"fontSize": "clamp(29px, 3.5vw, 36px)",
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": 400,
					"lineHeight": 1.33
				}
			},
			"h4": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": 0
					}
				},
				"typography": {
					"fontSize": "24px",
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": 400,
					"lineHeight": 1.33
				}
			},
			"h5": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": 0
					}
				},
				"typography": {
					"fontSize": "18px",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": 700,
					"lineHeight": 1.33
				}
			},
			"h6": {
				"color": {
					"text": "var(--wp--preset--color--text-dark)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--style--block-gap)",
						"top": 0
					}
				},
				"typography": {
					"fontSize": "14px",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": 700,
					"lineHeight": 1.33
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			}
		},
		"blocks": {
			"core/archives": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text)"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/button": {
				"border": {
					"width": 0,
					"radius": 0
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--light)"
				},
				"spacing": {
					"padding": "12px 30px"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--smaller)",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": 700
				}
			},
			"core/calendar": {
				"color": {
					"background": "transparent",
					"text": "var(--wp--preset--color--text)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text)"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/categories": {
				"elements": {
					"link": {
						"color": {
							"text": "inherit"
						}
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "30px",
					"fontWeight": 700
				}
			},
			"core/site-tagline": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--smaller)",
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				},
				"color": {
					"text": "var(--wp--preset--color--text-light)"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "14px",
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				}
			},
			"core/navigation-submenu": {
				"color": {
					"background": "transparent",
					"text": "var(--wp--preset--color--text)"
				}
			},
			"core/quote": {
				"border": {
					"style": "solid",
					"width": "1px 0",
					"color": "var(--wp--preset--color--separator)"
				},
				"spacing": {
					"padding": {
						"top": "30px",
						"bottom": "30px",
						"left": 0,
						"right": 0
					}
				},
				"typography": {
					"fontSize": "clamp(29px, 3.5vw, 36px)"
				},
				"color": {
					"text": "var(--wp--preset--color--dark)"
				}
			},
			"core/pullquote": {
				"border": {
					"style": "solid",
					"width": "1px 0",
					"color": "var(--wp--preset--color--separator)"
				},
				"spacing": {
					"padding": {
						"top": "60px",
						"bottom": "60px",
						"left": 0,
						"right": 0
					}
				},
				"typography": {
					"fontSize": "clamp(29px, 3.5vw, 36px)"
				},
				"color": {
					"text": "var(--wp--preset--color--dark)"
				}
			},
			"core/code": {
				"border": {
					"width": 0,
					"radius": 0
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				},
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--text-light)"
				}
			},
			"core/table": {
				"border": {
					"style": "solid",
					"width": "2px",
					"color": "var(--wp--preset--color--separator)"
				}
			},
			"core/columns": {
				"spacing": {
					"margin": {
						"bottom": 0
					}
				}
			},
			"core/separator": {
				"color": {
					"text": "var(--wp--preset--color--separator)"
				},
				"border": {
					"width": "1px"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--smallest)",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"textTransform": "uppercase",
					"latterSpacing": "2px"
				},
				"color": {
					"text": "var(--wp--preset--color--text-lighter)"
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--smaller)",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"textTransform": "uppercase",
					"latterSpacing": "2px"
				},
				"color": {
					"text": "var(--wp--preset--color--text-light)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "clamp(36px, 3.5vw, 48px)"
				}
			},
			"core/post-excerpt": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": 700
				},
				"color": {
					"text": "var(--wp--preset--color--text-light)"
				}
			},
			"core/post-comments-form": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				},
				"elements": {
					"h3": {
						"typography": {
							"fontSize": "16px",
							"fontFamily": "var(--wp--preset--font-family--secondary)",
							"textTransform": "uppercase"
						}
					}
				}
			},
			"core/comments-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": 700,
					"textTransform": "uppercase",
					"latterSpacing": "2px"
				}
			},
			"core/comment-content": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				},
				"color": {
					"background": "var(--wp--preset--color--tile)"
				},
				"spacing": {
					"padding": {
						"top": "15px",
						"left": "30px",
						"right": "30px",
						"bottom": "15px"
					}
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "16px",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontWeight": 700
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text)"
						}
					}
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text-lighter)"
						}
					}
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text)"
						}
					}
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"textTransform": "uppercase"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--text)"
						}
					}
				}
			},
			"core/comments-pagination": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"textTransform": "uppercase",
					"fontWeight": 700
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--style--block-gap)",
						"bottom": "var(--wp--style--block-gap)"
					}
				}
			},
			"core/-comments-pagination-numbers": {
				"spacing": {
					"margin": 0
				}
			},
			"core/-comments-pagination-previous": {
				"spacing": {
					"margin": 0
				}
			},
			"core/-comments-pagination-next": {
				"spacing": {
					"margin": 0
				}
			},
			"core/latest-posts": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "sidebar",
			"title": "Sidebar",
			"area": "general"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post", "page" ]
		}
	]
}
