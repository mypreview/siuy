{
	"name": "mypreview/siuy",
	"type": "wordpress-theme",
	"description": "Specialized WordPress theme dedicated to blogging, and primarily made for the minimalistic book and writing lovers.",
	"keywords": [
		"WordPress",
		"Themes"
	],
	"homepage": "https://mypreview.github.io/siuy",
	"license": "GPL-3.0",
	"authors": [
		{
			"name": "MyPreview",
			"homepage": "https://www.mypreview.one"
		},
		{
			"name": "Siuy",
			"homepage": "https://mypreview.github.io/siuy"
		}
	],
	 "config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require": {
		"php": ">=7.4"
	},
    "archive": {
		"exclude": [
			"!/build",
			"!/languages",
			"!/style.css",
            "!/style-rtl.css",
			"/docs",
			"/src",
            "CONTRIBUTING.md",
            "CODE_OF_CONDUCT.md",
			"babel.config.js",
			"composer.json",
			"composer.lock",
			"package.json",
			"package-lock.json",
			"phpcs.xml.dist",
			"README.md",
			"renovate.json",
			"node_modules",
			"vendor",
			".husky",
			".stylelintrc.js",
			".stylelintignore",
			".editorconfig",
			".gitattributes",
			".gitignore",
			".github",
			".browserslistrc",
			".eslintrc.js",
			".prettierrc.js",
			".wp-env.json",
			"webpack.config.js",
            "siuy.zip",
            ".*"
		]
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "3.6.2",
		"wptrt/wpthemereview": "^0.2.1",
		"wp-coding-standards/wpcs": "2.3.0",
		"phpcompatibility/php-compatibility": "9.3.5",
		"dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
		"wp-cli/i18n-command": "^2.2.6"
	},
	"scripts": {
		"phpcs": [
			"phpcs --extensions=php -s -p --runtime-set testVersion 7.4-"
		],
		"phpcbf": [
			"phpcbf --extensions=php -p --runtime-set testVersion 7.4-"
		],
        "make-pot": [
			"wp i18n make-pot . languages/siuy.pot --exclude=build"
		]
	}
}